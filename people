<script>
/*
This script looks for the file "people-list", which contains a single line with a person's name, e.g.:

fede_camara_halac
viola_yip
etc.

These names should match the names on the .jpg files in img/people/ like this:

	$ ls img/people > people-list

*/
function getContent() {
  jQuery.get('updates/people-list', function(data){
    lines = data.split("\n");
    $.each(lines, function(n, elem) {
      $("#people-list")
      .append("<div id=" + elem + " onClick=wpLoadId(this) >")
      .append("<h4>" + elem + "</h4>")
      .append("<img src='img/people/" + elem + "'.jpg height=180 width=180 />")
      .append("</div>")
    });
  });
}
$(getContent());
</script>

<article>
<h3>People</h3>
<div id=people-list></div>
</article>