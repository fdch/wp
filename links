<script>
/*
This script looks for the file "people-list", which contains a single line with a person's name, e.g.:

fede_camara_halac
viola_yip
etc.

These names should match the names on the .jpg files in img/people/ like this:

	$ ls img/people > people-list

*/
function getContent() {
  jQuery.get('updates/links', function(data){
    row = data.split("\n");
    $.each(row, function(n, r) {
      column = r.split("\t");
      $.each(column, function(n, c) {
      if(var alink = c.match(/\((.*?)\)/gi) {
        var link = alink.replace(/\(|\)/g,""); 
        $("#links-text").append("<h5><a href='" + link + "' target=_blank title='" + link + "' >");
      } else if (var aname = c.match(/\[(.*?)])/gi) {
        var name = aname..replace(/\[|\]/g,""); 
        $("#links-text").append(name + "</a></h5>");
      } else
        $("#links-text").append("<p>Something went wrong here...</p>");
    });
  });
}
$(getContent());
</script>
<article>

<h3>Links</h3>
<div id=links-text></div>
</article>