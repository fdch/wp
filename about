<script>
/*
This script looks for the file "about.txt", which contains one or more pararaphs describing waverly project
*/
function getContent() {
  jQuery.get('about.txt', function(data){
    lines = data.split("\n");
    $.each(lines, function(n, elem) {
      $("#about-text")
      .append("<p>" + elem + "</p>")
    });
  });
}
$(getContent(), layoutSetup());
</script>

<article>

<h3>About</h3>
<img src="img/about" height=180 />
